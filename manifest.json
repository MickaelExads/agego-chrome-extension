{
  "name": "MailHog OTP Autofill",
  "description": "Fetch OTP from local MailHog and autofill Angular OTP inputs automatically. Includes auto-polling, options UI, and popup controls.",
  "version": "1.0.0",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "{12345678-1111-1111-1111-123456789101}",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "http://127.0.0.1:8025/*",
    "https://myapi.agego.test:8443/*",
    "https://localhost:8443/*",
    "https://127.0.0.1/*",
    "http://127.0.0.1/*",
    "https://localhost:4200/*",
    "http://localhost:4200/*",
    "http://localhost:63342/*",
    "https://localhost:63342/*",
    "https://sandbox.exads.rocks/*",
    "https://syndication.exads.rocks/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "MailHog OTP",
    "default_popup": "popup.html"
  },
  "commands": {
    "fill-otp": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Fetch OTP from MailHog and autofill inputs"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://myapi.agego.test:8443/*",
        "https://localhost:8443/*",
        "https://127.0.0.1/*",
        "http://127.0.0.1/*",
        "https://localhost:4200/*",
        "http://localhost:4200/*",
        "http://localhost:63342/*",
        "https://localhost:63342/*",
        "https://sandbox.exads.rocks/*",
        "https://syndication.exads.rocks/*",
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ]
}